
{{#each articles}}
{{#if saved}}
<div class="col s12 m6" id={{this._id}}>
    <div class="card black">
        <div class="card-content white-text center">
            <span class="card-title"><a href="{{this.link}}" target="_blank">{{this.title}}</a></span>
            <p>{{this.summary}}</p>
        </div>
        <div class="card-action">
            {{#unless this.note}}
            <a class="btn right" value="{{this._id}}">Add Note</a>
            {{/unless}}
            {{#if this.note}}
            <a value="{{this._id}}">Edit Note</a>
            {{/if}}
        </div>
    </div>
</div>
{{/if}}
{{/each}}